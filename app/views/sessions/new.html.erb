<div class="row">
  <div class="col-xs-offset-4 col-xs-4">
    <%= form_tag sessions_path do %>
      <h2 class="form-signin-heading", align="center">Log in</h2>
      <!-- <%if @error %>
        <div class="alert alert-danger">
          <strong>
            <%= @error %>
          </strong>
        </div>
      <%end%> -->
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
        <%= email_field_tag :email,'',autofocus: true, class: 'form-control', placeholder: 'E-mail'%>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
        <%= password_field_tag :password, '', autocomplete: 'off', class: 'form-control' , placeholder: 'Password' %>
      </div>
      <p class="button" ><%= submit_tag 'Log in', class: 'btn btn-primary btn-block' %></p>
    <% end %>
  </div>
</div>
